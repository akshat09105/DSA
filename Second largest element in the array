#include <bits/stdc++.h> 
int findSecondLargest(int n, vector<int> &arr)
{
    int largest=arr[0];
        int second=INT_MIN;
        int change=0;
        for(int i=0;i<arr.size();i++){
            if(arr[i]>largest){
                second=largest;
                largest=arr[i];
                change=1;
            }
            else if(arr[i]<largest){
                if(arr[i]>second){
                    second=arr[i];
                    change=1;
                }
            }
            else{

            }
        }
        if(change==0){
            second=-1;
        }
        return second;
}
